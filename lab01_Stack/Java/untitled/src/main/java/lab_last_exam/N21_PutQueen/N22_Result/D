Общая схема рекурсивного решение суммы подмножества

boolean found = false;
void takeNumber(int x, int s) {
    if (x == n) {//Получена полная последовательность
        if (s == k) { //Проверка подходит или нет
            found = true;
        }
    } else {
        for (int i = 0; i < 2; i++) {//Возможные варианты одного элемента(брать или не брать)
                                     //если больше, то менять 2
            takeNumber(x+1, (i==1)? s+a[x]: s); //Добавляем элемент или нет
        }
    }
}

Общая схема решения методом ветвей и границ расстановки ферзей

int count = 0;
void putQueen(int x) {
    if (x == 8) {//получена полная последовательность
        count++;
    } else {
        for (int i = 0; i < 8; i++) {//Возможные варианты одного элемента(брать или не брать)
                                                                          //если больше, то менять 8
             y[x] = i;
            //отсекаем ту ветку, когда у нас уже неправильно стоят ферзи на этапе формирования
             if (isCorrect(x)) putQueen(x + 1);
        }
    }
}